{
  "compilerOptions": {
    "target": "ES2022",                  // підтримка нових фіч JS
    "module": "esnext",                  // для ESM (import/export)
    "moduleResolution": "node",          // як Node шукає модулі
    "outDir": "dist",                    // куди класти .js
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true,        // не міняти імпорти
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
}